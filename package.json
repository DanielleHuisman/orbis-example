{
    "name": "orbis-example",
    "description": "Orbis example project.",
    "version": "0.0.0",
    "license": "MIT",
    "author": "Daniel Huisman <daniel@huisman.me> (https://danielhuisman.io)",
    "repository": "github:DanielHuisman/orbis-example",
    "keywords": [
        "orbis",
        "example"
    ],
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "LICENSE.md",
        "README.md",
        "package.json"
    ],
    "scripts": {
        "clean": "rimraf dist",
        "build": "yarn run clean && yarn run build:ts",
        "build:ts": "tsc",
        "prepublishOnly": "yarn run build",
        "dev": "dotenv -- nodemon -e ts -x ts-node src/index.ts",
        "debug": "dotenv -- node --inspect --inspect-brk -r ts-node/register src/index.ts",
        "start": "dotenv -- node dist/index.js",
        "typeorm": "ts-node ./node_modules/.bin/typeorm"
    },
    "dependencies": {
        "@danielhuisman/koa-base": "^1.1.1",
        "@orbis-framework/auth": "^0.3.0",
        "@orbis-framework/core": "^0.2.7",
        "@orbis-framework/email": "^0.2.7",
        "@types/koa-passport": "^4.0.3",
        "@types/passport-jwt": "^3.0.6",
        "apollo-server-koa": "2.20.0",
        "cuid": "^2.1.8",
        "graphql": "^15.8.0",
        "graphql-middleware": "^6.1.20",
        "graphql-shield": "^7.5.0",
        "koa-passport": "^4.1.4",
        "nexus": "^1.3.0",
        "passport-jwt": "^4.0.0",
        "pg": "^8.7.3",
        "typeorm": "^0.2.45"
    },
    "devDependencies": {
        "dotenv-cli": "5.1.0",
        "nodemon": "2.0.15",
        "rimraf": "3.0.2",
        "ts-node": "10.7.0",
        "typescript": "4.6.3"
    },
    "resolutions": {
        "graphql": "^15.8.0",
        "apollo-server-koa/apollo-server-core": "2.20.0",
        "apollo-server-core/graphql-upload": "^13.0.0"
    }
}
